<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Login</title>
    <link rel="icon" type="image/x-icon" href="/static/assets/icons/sheep.ico">
    <link rel='stylesheet' href='https://cdn-uicons.flaticon.com/uicons-regular-rounded/css/uicons-regular-rounded.css'>
    <link href="/static/assets/css/login.css" rel="stylesheet" type="text/css">
    <link href="/static/assets/css/dashboard.css" rel="stylesheet" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </head>
  <body>

    <section class="dashboard-header">
      <div class="header-container bg-info">
	<a href="#" class="btn btn-warning rounded">
	  <div class="logo-containter">
	    <img src="static/assets/images/reading.png" height=54px>
	    <div class="logo-title">
	      <p>Hitsuji's</p>
	      <p>bookstore</p>
	    </div>
	  </div>
	</a>
      </div>
    </section>

    <section class="content-after-header">

    <section class="server-alert" style="<%= locals.alert == undefined ? 'display:none' : 'display:block' %>">
      <div class="bg-danger mt-3 border rounded w-25">
	<i class="fi fi-rr-exclamation"></i>
	<span><%= locals.alert %></span>
      </div>
    </section>

    <section class="login-form">
      <form class="needs-validation border border-primary rounded w-25"
	    method="POST"
	    action="/"
	    novalidate>

	<h1 class="text-center mt-3">Login</h1>

	<div class="username-input input-group mb-3 mt-3">
	  <div class="input-group-prepend">
	    <span class="input-group-text"><strong>Username</strong></span>
	  </div>
	  <input class="form-control" type="text" name="username" placeholder="Username" required>
	  <div class="invalid-feedback">Please enter username</div>
	</div>

	<div class="password-input input-group mb-3">
	  <div class="input-group-prepend">
	    <span class="input-group-text"><strong>Password</strong></span>
	  </div>
	  <input class="form-control" type="password" name="password" placeholder="Password" required>
	  <div class="invalid-feedback">Please enter password</div>
	</div>

	<div class="forgot-password">
	  <a href="#">Forgot password?</a>
	  <p>
	    Not a member?
	    <a href="/signup/">Sign up</a>
	  </p>
	</div>

	<div class="text-center d-sm-flex justify-content-around">
	  <button class="btn btn-primary btn-block border rounded mb-3">Login</button>
	  <p class="mt-2">Or</p>
	  <a class="btn btn-primary btn-block rounded mb-3" href="/books/anonymous">
	    <i class="fi fi-rr-incognito"></i>
	  </a>
	</div>

      </form>

    </section>

    </section>

    <script>
      (function() {
	  'use strict';
	  window.addEventListener('load', function() {
	      // Fetch all the forms we want to apply custom Bootstrap validation styles to
	      var forms = document.getElementsByClassName('needs-validation');
	      // Loop over them and prevent submission
	      var validation = Array.prototype.filter.call(forms, function(form) {
		  form.addEventListener('submit', function(event) {
		      if (form.checkValidity() === false) {
			  event.preventDefault();
			  event.stopPropagation();
		      }
		      form.classList.add('was-validated');
		  }, false);
	      });
	  }, false);
      })();
    </script>
  </body>
</html>
